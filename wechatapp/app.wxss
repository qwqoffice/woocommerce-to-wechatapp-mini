@import "vendor/ZanUI/index.wxss";

page, view {
    box-sizing: border-box;
    color: #444;
    font-size: 30rpx;
}

view {
    word-break: break-all;
}

text {
    line-height: 1.8;
}

button {
    color: #444;
    border-radius: 3px;
}

page button {
    border: 1px solid rgba(0, 0, 0, 0.2);
}

page button::after {
    display: none;
}

image, swiper {
    width: 100%;
    display: block;
}

.WxEmojiView {
    color: inherit;
}

.wxParse-Text {
    padding: 0 10px;
}

.center {
    position: fixed;
    height: 100%;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.center > view, .center > text {
    margin-top: -60px;
}

.center-title {
    height: 47px;
    line-height: 47px;
    position: relative;
    color: #96588a;
    background-color: #fff;
    border-radius: 4px;
    text-align: center;
    margin: 10px;
    margin-top: 20px;
    font-size: 18px;
}

.center-title text {
    background-color: #fff;
    padding: 0 15px;
    position: relative;
}

