/* 公告栏 */

.zan-noticebar {
    padding: 9px 10px;
    line-height: 1.5;
}

.zan-noticebar view {
    font-size: 12px;
    color: #f60;
    background-color: #fff7cc;
}

/* 搜索栏 */

.search {
    padding: 7px 5px;
    background-color: #fff;
}

.search-input-wrapper {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    padding: 7px 5px;
    border: 1px solid #96588a;
    border-radius: 3px;
}

.search-input-wrapper:hover {
    background-color: rgba(0, 0, 0, 0.05);
}

.search-label {
    line-height: 1;
    color: #b184a8;
}

.search-input-wrapper image {
    width: 18px;
    height: 18px;
}

.view-all {
    border-radius: 4px;
    color: #555;
    background-color: #fff;
    border-color: #ddd;
    font-size: 16px;
    margin: 10px;
    margin-top: 0;
    padding: 5px 15px;
    display: flex;
    justify-content: center;
    align-items: center;
}

