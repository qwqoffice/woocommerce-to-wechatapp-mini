/* 文章 */

.posts {
    display: flex;
    align-items: center;
    padding: 0 15px;
    background-color: #fff;
}

.posts-label {
    padding: 8px 0;
}

.posts-label image {
    position: relative;
    width: 50px;
    height: 12px;
    padding: 7px 12px 7px 0;
}

.posts-label image::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 200%;
    height: 200%;
    border-right: 1px solid #ddd;
    transform-origin: 0 0;
    transform: scale(0.5, 0.5);
    box-sizing: border-box;
    z-index: 1;
}

.post-title-wrapper {
    margin-left: 12px;
    position: relative;
    flex-grow: 1;
    height: 35px;
}

.post-title {
    opacity: 0;
    width: 100%;
    padding: 10px 0;
    font-size: 28rpx;
    position: absolute;
    top: 50%;
    left: 0;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
    line-height: 1;
    transform: translateY(-50%);
    transition: opacity 0.2s ease-in-out;
}

.post-title.active {
    opacity: 1;
    z-index: 1;
}
